	public Piece getPiece(char rank, int file) {
		int i = -1; //throws error if case not 'a'-'h'
		switch (rank) {
			case 'a':	i = 0;
			case 'b':	i = 1;
			case 'c':	i = 2;
			case 'd':	i = 3;
			case 'e':	i = 4;
			case 'f':	i = 5;
			case 'g':	i = 6;
			case 'h':	i = 7;
		}
		return board[i][file];
	}
	
