	}
	
	public boolean moveAllowed(Piece piece, char orig_rank, int orig_file, 
			char new_rank, int new_file) {
		if ((getPiece(orig_rank, orig_file) != piece) 
				|| (!piece.ableToMove(new_rank, new_file)) 
				|| (kingInCheck())
				|| (!isTurn(piece.getColor()))) {
			return false;
		}
		
		return true;
	}

